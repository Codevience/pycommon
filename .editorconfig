root = true

[*]
end_of_line = crlf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
charset = utf-8
indent_size = 4

[*.py]
max_line_length = 119

[*.bat]
indent_size = 2

[*.yml]
indent_size = 2
